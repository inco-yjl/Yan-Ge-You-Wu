    color: rgb(87, 87, 87);
    display: inline-flex;
}
.bilibili image {
    width: 32rpx;
    height: 32rpx;
}
.songCover {
    position: absolute;
    left: 50%;
    margin-left: -336rpx;
    margin-top: 20rpx;
    width: 672rpx;
    height: 378rpx;
    border-radius: 20rpx;
    z-index: 1000;
    transition-duration: 0.4s;
}
.audioPlayer{
    height: 114rpx;
    width: 600rpx;
    left: 50%;
    margin-left: -326rpx;
    position: relative;
    padding-top: 450rpx;
  }
  .player{
    width: 100%;
    height: 100%;
    position: relative;
  }
  .audioBack{
    width: 100%;
    height: 100%;
  }
  .audioControls{
    width: 100%;
    height: 80rpx;
    color: #666;
    font-size: 6pt;
    text-align: center;
  }
  .audioControls .bottom{
    width: 84rpx;
    height: 100%;
    float: left;
  }
  .audioControls .bottom image{
    margin-top: 15rpx;
    width: 60rpx;
    height: 60rpx;
  }

  .slider {
      padding-top: 8rpx;
  }
  .audioControls .slider{
    width: calc(100% - 84rpx);
    height: 100%;
    float: left;
  }
  .slider slider{
    width: 95%;
    margin-left: 4%;
    margin-right: 0;
  }
.hintBlock {
    position: relative;
    width: 600rpx;
    left: 50%;
    padding-left: 8rpx;
    margin-left: -326rpx;
    position: relative;
}
.hint-icon {
    width: 70rpx;
    height: 65rpx;
  }
.slogan {
    font-family:'Courier New', Courier, monospace;
    font-weight: bold;
    font-size: 32rpx;
    line-height: 80rpx;
    width: 522rpx;
    justify-content: center;
    display: inline-flex;
}

.answerBlock input {
    width: 600rpx;
    height: 72rpx;
    color: #1FE2C6;
