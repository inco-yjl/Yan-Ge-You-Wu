    text-align: center;
}
.wrongAnswerBlock input {
    width: 600rpx;
    height: 72rpx;
    color: #ff3b3b;
    font-size: 45rpx;
    text-align: center;
}
.wrongAnswerBlock {
    float: left;
    position: absolute;
    bottom: 350rpx;
    margin-left: 10%;
    width: 80%;
    height: 120rpx;
    display: flex;
    align-items: center;
    border-bottom: 6rpx solid #ff3b3b;
    transition-duration: 0.2s;
}

.answerBlock {
    float: left;
    position: absolute;
    bottom: 350rpx;
    margin-left: 10%;
    width: 80%;
    height: 120rpx;
    display: flex;
    align-items: center;
    border-bottom: 6rpx solid #1FE2C6;
    transition-duration: 0.2s;
}
.hintOnBlock {
    display: flex;
    height: 350rpx;
    overflow: auto;
}
.submit {
    height: 72rpx;
    width: 72rpx;
    transition-duration: 0.2s;
}
.correctAnswer {
    font-family:Arial, Helvetica, sans-serif;
    font-weight: bold;
    font-size: 40rpx;
    line-height: 60rpx;
